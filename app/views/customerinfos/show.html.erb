<h2>This is what your week looks like!!</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Day</th>
      <th>Mealtime</th>
      <th>Meal</th>
      <th>Chef</th>
      <th>No. of meals</th>
    </tr>
  </thead>
  <tbody>
    <% for a in 1..@days.length() do%>
      <tr>
        <td>
          <%= @days[a-1] %>
        </td>
        <td>
          <%= @mealtimes[a-1] %>
        </td>
        <td>
          <%= @meals[a-1] %>
        </td>
        <td>
          <%= link_to @chefs[a-1].name, profile_path(id: @chefs[a-1].id) %>
        </td>
        <td>
          <%= @num_meals[a-1] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Change your schedule', edit_customerinfo_path(@customerinfo), :class => 'btn btn-primary col-2' %>
<%= link_to 'Remove an entry', choose_customerinfo_entry_path(@customerinfo), :class => 'btn btn-primary col-2' %>