<h2>All Chefs</h2>

<%#  Part 2: Start here... %>
<%= form_tag chefinfos_path, method: :get, id: 'cuisine_selection_form' do %>
  <% @all_cuisines.each do |cuisine| %>
    <div class="form-check  form-check-inline">
      <%= label_tag "cuisines[#{cuisine}]", cuisine, class: 'form-check-label' %>
      <%= check_box_tag "cuisines[#{cuisine}]", "1",  1, class: 'form-check-input' %>
    </div>
  <% end %>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
<% end %>

<table class="table table-striped col-md-12" id="chefs">
  <thead>
    <tr>
      <th>Chef's Name</th>
      <th>date</th>
      <th>Mealtime</th>
      <th>Meal</th>
    </tr>
  </thead>
  <tbody>
    <% @chefs_table.each do |chef| %>
      <tr>
        <td>
          <%= chef.chefinfo[:name] %>
        </td>
        <td>
          <%= chef[:days] %>
        </td>
        <td>
          <%= chef[:mealtime] %>
        </td>
        <td>
          <%= chef[:meal] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_tag update_customerinfo_path(@customerinfo), :method => :put do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= label :day, :day, 'Enter which day : ', :class => 'col-form-label' %>
  <%= date_field_tag :day, :day, :class => 'form-control', :id => 'datepicker' %>
  <%= label_tag :mealtime, 'Select meal:', :class => 'col-form-label' %>
  <%= select_tag :mealtime, options_for_select(['Breakfast', 'Lunch', 'Snacks', 'Dinner'], :mealtime), :class => 'form-control' %>
  <%= label :new_entry, :chef, 'Enter which chef : ', :class => 'col-form-label' %>
  <%= text_field :new_entry, :chef, :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Update customer Info', :class => 'btn btn-primary' %>
<% end %>
