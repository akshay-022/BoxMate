<h2>This is what your week looks like!!</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Day</th>
      <th>Meal</th>
      <th>Max Customers</th>
      <th>Customers</th>
    </tr>
  </thead>
  <tbody>
    <% for a in 1..@chef.schedule.length() do%>
      <tr>
        <td>
          <%= @chef.day[a-1] %>
        </td>
        <td>
          <%= @chef.schedule[a-1] %>
        </td>
        <td>
          <%= @chef.max_customers[a-1] %>
        </td>
        <td>
          <%= @chef.num_customers[a-1] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Change your schedule', edit_chef_path(@chef), :class => 'btn btn-primary col-2' %>
