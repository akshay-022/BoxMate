<h3>Customers Signed Up For: <%= @chefmeal.meal %> on <%= @chefmeal.days%></h3>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Food Constraints</th>
      <th>Address</th>
      <th>Address Coordinates</th>
      <th>Order Placed</th>
      <th>No. of meals</th>
    </tr>
    <tbody>
    <% @customer_info.each do |customermeal| %>
      <tr>
        <td>
          <%= customermeal.customerinfo.name %>
        </td>
        <td>
          <%= customermeal.customerinfo.username %>
        </td>
        <td>
          <%= customermeal.customerinfo.food_constraint %>
        </td>
        <td>
          <%= customermeal.customerinfo.address %>
        </td>
        <td>
          <%= customermeal.customerinfo.address_coordinates %>
        </td>
        <td>
          <%= customermeal.customerinfo.created_at %>
        </td>
        <td>
          <%= customermeal.num_meals %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </thead>
</table>

