<h2>Edit your details chef!</h2>
<%= form_tag update_chefinfo_path(@chefinfo), :method => :put do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <h5 style="margin-top:0.5cm;">Change Subscription Availability: </h5>
  <%= label :new_entry, :subscription, 'Frequency', :class => 'col-form-label' %>
  <%= select_tag :subscription, options_for_select(['None', 'Daily', 'Weekly'], :subscription), :class => 'form-control' %>
  <h5 style="margin-top:0.75cm;">Edit Meal Details: </h5>
  <%= label :day, :day, 'Enter which day (At least 2 days in advance): ', :class => 'col-form-label' %>
  <%= date_field_tag :day, :day, :class => 'form-control', :id => 'datepicker', min: (Date.today + 2).to_s %>
  <%= label_tag :mealtime, 'Select meal:', :class => 'col-form-label' %>
  <%= select_tag :mealtime, options_for_select(['Breakfast', 'Lunch', 'Snacks', 'Dinner'], :mealtime), :class => 'form-control' %>
  <%= label :new_entry, :meal, 'Enter your dish : ', :class => 'col-form-label' %>
  <%= text_field :new_entry, :meal, :class => 'form-control' %>
  <%= label :new_entry, :max_customers, 'Enter the maximum people you can cook for : ', :class => 'col-form-label' %>
  <%= number_field :new_entry, :max_customers, :class => 'form-control', :step => 1, :min => 0 %>
  <br/>
  <%= submit_tag 'Update Chef Info', :class => 'btn btn-primary' %>
<% end %>