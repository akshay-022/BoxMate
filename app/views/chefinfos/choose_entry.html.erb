<h2>Edit your details chef!</h2>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Day</th>
      <th>Mealtime</th>
      <th>Meal</th>
      <th>Max Customers</th>
      <th>Customers</th>
    </tr>
  </thead>
  <tbody>
    <% @chefmeals.each do |chefmeal| %>
      <tr>
        <td>
          <%= chefmeal.days %>
        </td>
        <td>
          <%= chefmeal.mealtime %>
        </td>
        <td>
          <%= chefmeal.meal %>
        </td>
        <td>
          <%= chefmeal.max_customers %>
        </td>
        <td>
          <%= chefmeal.num_customers %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_tag destroy_chefinfo_entry_path(@chefinfo), :method => :put do %>
  <%= label :day, :day, 'Enter which day : ', :class => 'col-form-label' %>
  <%= date_field_tag :day, :day, :class => 'form-control', :id => 'datepicker' %>
  <%= label_tag :mealtime, 'Select meal:', :class => 'col-form-label' %>
  <%= select_tag :mealtime, options_for_select(['Breakfast', 'Lunch', 'Snacks', 'Dinner'], :mealtime), :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Destroy Chef Entry', 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col 2' %>
<% end %>
